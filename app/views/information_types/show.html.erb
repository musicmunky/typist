<%- view_title "Information type |  #{@information_type.type_code} - #{@information_type.name}" %>

<% content_for :main do %>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h1 class="page-header"><%= "#{@information_type.type_code} - #{@information_type.name}" %></h1>
    <h2>Description</h2>
    <%= description_text(@information_type) %>

    <%= security_category_panel(@information_type) %>

    <h3>Confidentiality
      <small><%= impact_level_label(@information_type.confidentiality_impact_level) %></small>
    </h3>
    <p>
      <%= @information_type.confidentiality_impact_description %>
    </p>

    <h3>Integrity
      <small><%= impact_level_label(@information_type.integrity_impact_level) %></small>
    </h3>
    <p>
      <%= @information_type.integrity_impact_description %>
    </p>

    <h3>Availability
      <small><%= impact_level_label(@information_type.availability_impact_level) %></small>
    </h3>
    <p>
      <%= @information_type.availability_impact_description %>
    </p>
  </div>
</div>
<% end %>
