<% if @hits.length == 0 && (@search.to_s != '') %>
<h2 class='text-center'>Y u no search for more reasonable search terms?!</h2>
<div class='col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xs-offset-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4'>
<%= image_tag('y-u-no.png', alt: 'Y u no search for more reasonable criteria?!', class: 'img-responsive') %>
</div>
<% else %>
<ul class='list-unstyled'>
  <% @hits.each do |hit| %>
    <li>
      <%= link_to(information_type_path(hit.id)) do %>
        <h2><%= hit.type_code %> <small><%= hit.name %></small></h2>
      <% end %>
      <div>
        <strong><%= "%s - %s" % [hit.type_code, hit.name] %></strong> = <em>
          {(confidentiality, <%= impact_level_text(hit.confidentiality_impact_level) %>),
          (integrity, <%= impact_level_text(hit.integrity_impact_level) %>),
          (availability, <%= impact_level_text(hit.availability_impact_level) %>)}
        </em>
      </div>
    </li>
  <% end %>
</ul>
<% end %>
